<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".NivelesActivity" android:background="@drawable/fondo_mvp">

    <Button
            android:text="Principiante"
            android:layout_width="246dp"
            android:layout_height="59dp" android:id="@+id/btnPrincipiante"
            app:layout_constraintEnd_toEndOf="@+id/txtViewNiveles"
            app:layout_constraintStart_toStartOf="@+id/txtViewNiveles"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/txtViewNiveles"
            app:layout_constraintHorizontal_bias="0.508"/>
    <TextView
            android:text="Niveles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/txtViewNiveles"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="160dp"
            app:layout_constraintHorizontal_bias="0.497" android:textSize="60sp" android:fontFamily="sans-serif-black"
            android:textColor="#FFFFFF"/>
    <Button
            android:text="Medio"
            android:layout_width="246dp"
            android:layout_height="59dp" android:id="@+id/btnMedio"
            app:layout_constraintEnd_toEndOf="@+id/btnPrincipiante"
            app:layout_constraintStart_toStartOf="@+id/btnPrincipiante"
            app:layout_constraintTop_toBottomOf="@+id/btnPrincipiante" android:layout_marginTop="20dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="avanzado"
            android:layout_width="246dp"
            android:layout_height="59dp" android:id="@+id/btnAvanzado"
            app:layout_constraintEnd_toEndOf="@+id/btnMedio" app:layout_constraintStart_toStartOf="@+id/btnMedio"
            android:layout_marginTop="20dp" app:layout_constraintTop_toBottomOf="@+id/btnMedio"
            app:layout_constraintHorizontal_bias="1.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>